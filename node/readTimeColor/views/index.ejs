<!DOCTYPE html>
<html>
  <head>
    <title>Read-Time Colors</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style type="text/css">
      .color{
        padding: 30px 60px;
        display: inline-block;
        position: relative;
        left: 300px;
        top: 400px;
        margin-left: 15px;
      }
    </style>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script type ="text/javascript" src="/socket.io/socket.io.js"></script>
    <script type ="text/javascript">
        $(document).ready(function (){
            // this triggers the connection event in our server!
            var socket  = io.connect();
            $('#green').click(function(){
                socket.emit("colorGreenChangeRequest");
            })
            $('#Blue').click(function(){
                socket.emit("colorBlueChangeRequest");
            })
            $('#Pink').click(function(){
                socket.emit("colorPinkChangeRequest");
            })
            socket.on("GreenChanged",function(){
                $('#backgroundColorChange').css("background-color", "Green");
            })
            socket.on("BlueChanged",function(){
                $('#backgroundColorChange').css("background-color", "Blue")
            })
            socket.on("PinkChanged",function(){
                $('#backgroundColorChange').css("background-color", "Pink")
            })






        })
    </script>
  </head>
  <body>
    <div id="backgroundColorChange" style="width: 1140px; height: 800px; background-color: green;">
      <button id="green" class="color">Green</button>
      <button id="Blue" class="color">Blue</button>
      <button id="Pink" class="color">Pink</button>


    </div>
  </body>
</html>
